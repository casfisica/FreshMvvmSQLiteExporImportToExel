<?xml version="1.0" encoding="utf-8" ?>
<freshmvvm:FreshBaseContentPage  xmlns:freshmvvm="clr-namespace:FreshMvvm;assembly=FreshMvvm"
                                 xmlns="http://xamarin.com/schemas/2014/forms"
                                 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                                 x:Class="FreshMvvmSQLiteExporImportToExel.Pages.AddUserPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" 
                     HorizontalOptions="Center"
                     Padding="20">

            <Entry Text="{Binding UnerNameIn}"/>
            <Label Text="Nombre de Usuario"
                   FontSize="Large"
                   TextColor="Black"
                   HorizontalOptions="Center"/>
            <Label Text="(Sin espacios ni caracteres especiales)"
                   HorizontalOptions="CenterAndExpand"/>

            <Entry Text="{Binding PassWordIn}"/>
            <Label Text="Contraseña"
                   FontSize="Medium"
                   TextColor="Black"
                   HorizontalOptions="Center"/>

            <StackLayout Padding="100">
                <Button Text="Agregar"
                    Command="{Binding AddToDataBase}"
                    HorizontalOptions="Center"/>
            </StackLayout>


        </StackLayout>
    </ContentPage.Content>
</freshmvvm:FreshBaseContentPage>